<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:background="#ffffff"
    android:layout_marginBottom="10dp"
    android:id="@+id/ctn_activity">

    <ImageView
        android:id="@+id/img_activity"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:background="@drawable/bg_popular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="center"/>

    <TextView
        android:id="@+id/tv_activityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="11dp"
        android:text="액티비티명"
        android:textColor="#151617"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/img_activity"
        app:layout_constraintTop_toTopOf="@+id/img_activity" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:text="92,000원"
        android:textColor="#151617"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_activityName" />

    <ImageView
        android:id="@+id/btn_select"
        android:layout_width="70dp"
        android:layout_height="37dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/btn_select"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>