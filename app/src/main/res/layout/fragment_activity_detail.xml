<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_popup_inset"
    tools:context=".feature.planning.activity.ActivityDetailFragment">

    <TextView
        android:id="@+id/tv_activityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="54dp"
        android:text="ActivityName"
        android:textColor="#151617"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_topBar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="19dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_activityName" />

    <TextView
        android:id="@+id/tv_detailInfo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:lineSpacingExtra="9dp"
        android:text="@string/sample_detail"
        android:textColor="#151617"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_topBar" />

    <ImageView
        android:id="@+id/img_myRealTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/img_mrt"
        app:layout_constraintEnd_toStartOf="@+id/btn_goRealTrip"
        app:layout_constraintTop_toBottomOf="@+id/tv_detailInfo" />

    <ImageView
        android:id="@+id/btn_goRealTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@drawable/btn_gotoreservation"
        app:layout_constraintBottom_toBottomOf="@id/img_myRealTrip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_myRealTrip" />

    <ImageView
        android:id="@+id/img_klook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/img_klook"
        app:layout_constraintEnd_toStartOf="@+id/btn_goKlook"
        app:layout_constraintTop_toBottomOf="@+id/img_myRealTrip" />

    <ImageView
        android:id="@+id/btn_goKlook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@drawable/btn_gotoreservation"
        app:layout_constraintBottom_toBottomOf="@id/img_klook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_klook" />

    <ImageView
        android:id="@+id/img_bottomBar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="19dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_klook" />

    <ImageView
        android:id="@+id/icn_w"
        android:layout_width="29dp"
        android:layout_height="34dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/img_money_korea_black_21x18"
        app:layout_constraintEnd_toStartOf="@+id/tv_price"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_bottomBar" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="92,000"
        android:textColor="#151617"
        android:textSize="31sp"
        app:layout_constraintBottom_toBottomOf="@id/icn_w"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/icn_w"
        app:layout_constraintTop_toTopOf="@+id/icn_w" />


    <Button
        android:id="@+id/btn_done"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_pop_button"
        android:text="확인"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icn_w" />

</androidx.constraintlayout.widget.ConstraintLayout>